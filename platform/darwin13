#--------------------------------------------------

#--------------------------------------------------
# History Options
#--------------------------------------------------

#--------------------------------------------------
# Aliases
#--------------------------------------------------
alias ls='ls -Ghp'
alias vi='/Applications/MacVim.app/Contents/MacOS/vim'
alias mode="stat -f '%A %N'"
alias en="trans -b :en"
alias jp="trans -b :ja"

#--------------------------------------------------
# Functions
#--------------------------------------------------
composer() {
  tty=
  tty -s && tty=--tty
  docker run \
    $tty \
    --interactive \
    --rm \
    --user $(id -u):$(id -g) \
    --volume /etc/passwd:/etc/passwd:ro \
    --volume /etc/group:/etc/group:ro \
    --volume $(pwd):/app \
    composer "$@"
}

