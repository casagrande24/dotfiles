export LSCOLORS="ExFxCxDxBxEgEdabagacad"
export SVN_EDITOR="mvim -f"
export GIT_EDITOR="mvim -f"

#--------------------------------------------------
# Prompt setting
#--------------------------------------------------

#--------------------------------------------------
# Shell Options
#--------------------------------------------------

#--------------------------------------------------
